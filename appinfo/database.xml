<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*locations</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>uid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
				<comments>User who reported the location</comments>
			</field>
			<field>
				<name>lat</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>16</length>
				<comments>latitude</comments>
			</field>
			<field>
				<name>lon</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>16</length>
				<comments>longitude</comments>
			</field>
			<field>
				<name>timestamp</name>
				<type>integer</type>
				<notnull>true</notnull>
				<length>4</length>
			</field>
			<field>
				<name>tid</name>
				<type>text</type>
				<length>255</length>
				<notnull>true</notnull>
				<comments>tracker id</comments>
			</field>
			<index>
				<name>location_user_index</name>
				<field>
					<name>uid</name>
					<sorting>ascending</sorting>
				</field>
			</index>
			<index>
				<name>location_tid_index</name>
				<field>
					<name>tid</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>
</database>
